@model IEnumerable<Bakery.Models.Order>
@{
    ViewBag.Title = "Index";
}

<h2>Order</h2>



<table class="table">

    <tr>
        <th>@Html.DisplayNameFor(model => model.ProductName)</th>
        <th>@Html.DisplayNameFor(model => model.Price)</th>
        <th>@Html.DisplayNameFor(model => model.Quantity)</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(model => item.ProductName)</td>
            <td>@Html.DisplayFor(model => item.Price)</td>
            <td>@Html.ActionLink("Buy", "Purchase", new { id = item.ProductKey })</td>
        </tr>
    }

</table>
<p> @Html.ActionLink("Cash Out and Receipt", "Receipt", "Order")</p>